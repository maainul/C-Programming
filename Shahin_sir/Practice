Problem 2:

* * * * *
  * * * *
    * * *
      * *
        *
        
 #include<stdio.h>
int main()
{
    int i,j,n;
    printf("Enter Number of Rows:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(j=0;j<i;j++)
        {
            printf(" ");
        }
        for (j=i;j<n;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
------------------------------------------
        
3.Problem 3:
     *
    **
   ***
  ****
 *****
#include<stdio.h>
int main()
{
    int i,j,n;
    printf("Enter Number of Rows:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(j=0;j<n-i;j++)
        {
            printf(" ");
        }
        for (j=0;j<=i;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    return 0;
}


